<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:id="@+id/firstLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            app:cardCornerRadius="8dp"
            android:elevation="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cof1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Freshly Brewed Coffee"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_marginLeft="6dp"/>

                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:layout_marginTop="2dp"
                        android:text="A delicious, healthy and nutritious granola recipe which has hints of espresso."
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#00ACC1"
                        android:text="Price: $5"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        tools:ignore="RtlHardcoded">

                        <Button
                            android:id="@+id/buttonDecrement1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="-"
                            android:background="@android:color/transparent"
                            android:textColor="#D32F2F"
                            android:textAlignment="center"
                            android:onClick="decrement1"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:id="@+id/quantity1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/buttonIncrement1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textColor="#00E676"
                            android:background="@android:color/transparent"
                            android:text="+"
                            android:onClick="increment1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--Second Card-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_marginTop="10dp"
            android:background="#000"
            app:cardCornerRadius="8dp"
            android:elevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cof2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coffee Frappuccino"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_marginLeft="6dp"
                        tools:ignore="HardcodedText"
                        android:layout_marginStart="6dp" />

                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:layout_marginTop="2dp"
                        android:text="Frappuccino is a trademarked brand of the Starbucks Corporation for a line of iced, blended coffee drinks"
                        tools:ignore="HardcodedText"
                        android:layout_marginStart="6dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#00ACC1"
                        android:text="Price: $10"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:gravity="center"
                        android:layout_marginLeft="8dp">

                        <Button
                            android:id="@+id/buttonDecrement2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="-"
                            android:background="@android:color/transparent"
                            android:textColor="#D32F2F"
                            android:textAlignment="center"
                            android:onClick="decrement2"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:id="@+id/quantity2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/buttonIncrement2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textColor="#00E676"
                            android:background="@android:color/transparent"
                            android:text="+"
                            android:onClick="increment2"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Third Card-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:background="#000"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp"
            android:elevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cof3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hazelnut Espresso"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_marginLeft="6dp"/>

                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:layout_marginTop="2dp"
                        android:text="A delicious, healthy and nutritious granola recipe which has hints of espresso."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#00ACC1"
                        android:text="Price: $15"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:gravity="center"
                        android:layout_marginLeft="8dp">

                        <Button
                            android:id="@+id/buttonDecrement3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="-"
                            android:background="@android:color/transparent"
                            android:textColor="#D32F2F"
                            android:textAlignment="center"
                            android:onClick="decrement3"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:id="@+id/quantity3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/buttonIncrement3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textColor="#00E676"
                            android:background="@android:color/transparent"
                            android:text="+"
                            android:onClick="increment3"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <CheckBox
                android:id="@+id/cream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whipped cream"
                android:checked="false"
                android:layout_marginRight="6dp"/>
            <CheckBox
                android:id="@+id/chocolate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chocolate Topping"
                android:checked="false"/>
        </LinearLayout>

        <TextView
            android:background="#FD3574"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary:"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price:"
                android:textSize="24sp"
                android:textColor="#2196F3"
                android:layout_marginTop="6dp"
                android:elevation="22dp"/>

            <TextView
                android:id="@+id/price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="22sp"
                android:textColor="#2196F3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relative">

            <Button
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/button"
                android:elevation="12dp"
                android:onClick="submitOrder"
                android:text="Order"
                android:textColor="#fff" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>